            <div class="xport-main-div">
                <div>
                    <button id="Save">Save Project</button>
                    <label id="HiddenProjectId" hidden></label>

                </div>
            </div>
        </div>

        <script src="/js/notify-combined.min.js"></script>
        <script type="text/javascript">

            //jQuery.notify.notify("Click me!", { position: "bottom right", className: "success" });
            $(document).ready(function () {
                $("#ConvertText").click(function () {
                    debugger;
                    var text = $('#FromText')[0].value;
                    var ProjectName = $('#ProjectName')[0].value;
                    var FromLangugae = $('#LanguageFrom').find(":selected").val();
                    var ToLanguage = $('#LanguageTo').find(":selected").val();
                    if (ProjectName == "") {
                        jQuery.notify("Provide a name please", { position: "bottom right", className: "warn" });
                    }
                    else if (FromLangugae == "") {
                        jQuery.notify("Select a language please", { position: "bottom right", className: "warn" });
                    }
                    else if (LanguageTo == "") {
                        jQuery.notify("Select a language please", { position: "bottom right", className: "warn" });
                    }

                    else if (text == "") {
                        jQuery.notify("Provide some content first!", { position: "bottom right", className: "warn" });
                    }
                    else {
                        $.ajax(
                            {
                                type: "Post", //HTTP POST Method
                                url: "Translate", // Controller/View
                                dataType: "json",
                                data: {
                                    text: text,
                                    FromLanguage: FromLangugae,
                                    ToLanguage: ToLanguage
                                },
                                success: function (response) {
                                    debugger;
                                    if (response != false) {
                                        $('#ConvertedText').val(response);
                                        window.scrollTo(0, document.body.scrollHeight);
                                        debugger;
                                    }
                                }
                            });
                    }
                });
                $("#Save").click(function () {
                    debugger;
                    var Convertedtext = $('#ConvertedText')[0].value;
                    var ProjectName = $('#ProjectName')[0].value;
                    var FromLangugae = $('#LanguageFrom').find(":selected").val();
                    var ToLanguage = $('#LanguageTo').find(":selected").val();
                    if (ProjectName == "") {
                        jQuery.notify("Provide a name please", { position: "bottom right", className: "warn" });
                    }
                    else if (FromLangugae == "") {
                        jQuery.notify("Select a language please", { position: "bottom right", className: "warn" });
                    }
                    else if (LanguageTo == "") {
                        jQuery.notify("Select a language please", { position: "bottom right", className: "warn" });
                    }

                    else if (Convertedtext == "") {
                        jQuery.notify("Provide some content first!", { position: "bottom right", className: "warn" });
                    }
                    else {
                        $.ajax(
                            {
                                type: "Post", //HTTP POST Method
                                url: "SaveTexttoTextProject", // Controller/View
                                dataType: "json",
                                data: {
                                    text: Convertedtext,
                                    ProjectName: ProjectName,
                                },
                                success: function (response) {
                                    debugger;
                                    if (response != false) {
                                        jQuery.notify("Project Created Successfully", { position: "bottom right", className: "success" });
                                        window.location = "/Home/Dashboard";
                                        debugger;
                                    }
                                }
                            });
                    }
                });


            });
        </script>
