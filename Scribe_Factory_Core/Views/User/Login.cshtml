<body>
    <section id="Sign-in">
        <div class="container">
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-5">
                    <div id="">
                        <form action="" class="login-form">
                            <div id="content-div-1">
                                <h6>Sign in to Scribe Factory</h6>
                                <div id="Email-div">
                                    <label for="Email">Email</label>
                                    <input type="email" name="Email" id="Email" placeholder="Enter your Email" required>
                                    <label id="ValidationEmail" style="color:red;font-size:10px;display:none">Email is required</label>
                                </div>
                                <div id="Password-div">
                                    <label for="Password">Password</label>
                                    <input type="password" name="Password" placeholder="Enter your Password" id="Password">
                                    <label id="ValidationPassword" style="color:red;font-size:10px;display:none">Password is required</label>
                                </div>
                                <div id="checkbox-flex">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                        <label class="form-check-label" for="flexCheckDefault">
                                            Remember Me
                                        </label>
                                    </div>
                                    <div id="Forgot-Password-div">
                                        <p><a href="">Forgot Password ?</a></p>
                                    </div>
                                </div>
                                <label id="LoginError" style="color:red;font-size:10px;text-align:center;display:none">Sorry, We couldn't find you. Please try again</label>
                                <div id="Log-In-div">
                                    <button type="button" id="LoginBtn" class="btn btn-primary Log-In-btn">Log In</button>
                                </div>

                            </div>
                            <div id="content-div-2">
                                <p class="account-yet-para">Don’t have an account yet ? <a href="~/User/SignUp"><span>Create an Account</span></a></p>
                                <p class="or-para">Or</p>
                                @*<div id="google">
                                    <p><img src="images/download 1.png" class="img-fluid" alt="..."><a href="">Google</a></p>
                                </div>
                                <div id="facebook">
                                    <p><img src="images/asd 1.png" class="img-fluid" alt="..."><a href="">Facebook</a></p>
                                </div>*@
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <script>
        $(document).ready(function () {
            //function will be called on button click having id btnsave
            $("#LoginBtn").click(function () {
                debugger;
                var email = $("#Email").val();
                var pass = $("#Password").val();
                var Validate = true;
                if (email == "") {
                    $("#ValidationEmail")[0].style.display = 'block';
                    Validate = false;
                }
                if (pass == "") {
                    $("#ValidationPassword")[0].style.display = 'block';
                    Validate = false;
                }
                if (Validate == true) {
                $.ajax(
                    {
                        type: "POST", //HTTP POST Method  
                        url: "User/Login", // Controller/View   
                        data: { //Passing data  
                            email: email , //Reading text box values using Jquery   
                            password: pass ,
                        },
                        dataType: "json",
                        success: function (response) {
                            debugger;
                            if (response) {
                                window.location.href = "/Home/Dashboard";
                            }
                            else {
                                document.getElementById('LoginError').style.display = 'block';
                            }
                        }
                    });
                }

            });
        });  
    </script>
</body>
</html>
